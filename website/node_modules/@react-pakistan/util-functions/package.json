{
  "name": "@react-pakistan/util-functions",
  "version": "1.0.13",
  "description": "A library of all util functions",
  "main": "index.js",
  "scripts": {
    "build": "yarn clean && yarn build:ts && cp package.json lib && cp README.md lib",
    "build:ts": "tsc --project tsconfig.json",
    "clean": "yarn rimraf ./lib",
    "generate:docs": "typedoc",
    "lint": "yarn lint:ts",
    "lint:staged": "lint-staged",
    "lint:ts": "eslint --config eslint.config.js",
    "publish:github": "yarn build && cd lib && npm publish && cd ..",
    "publish:npm": "yarn build && cd lib && npm publish --access public && cd ..",
    "test": "jest --coverage --config jest.config.js",
    "test:badges": "yarn test && jest-coverage-badges",
    "upgrade": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-pakistan/util-functions.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:staged",
      "pre-push": "yarn test && yarn build"
    }
  },
  "lint-staged": {
    "*.{ts,tx}": [
      "yarn lint"
    ]
  },
  "author": "Taimoor Khan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/react-pakistan/util-functions/issues"
  },
  "homepage": "https://github.com/react-pakistan/util-functions#readme",
  "dependencies": {
    "@microsoft/tsdoc": "^0.12.21"
  },
  "devDependencies": {
    "@react-pakistan/eslint-config-shared": "^1.0.3",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.10",
    "@types/react-native": "^0.63.25",
    "@types/styled-components": "^5.1.4",
    "eslint": "^7.11.0",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "lint-staged": "^10.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.5",
    "typescript": "^4.0.3"
  }
}
